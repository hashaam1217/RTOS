#define "uart.h"
#define "stm32f446xx.h"

#define GPIOAEN			(1U<<0) //the bit we want to enable
#define UART2EN			(1U<<17)

void uart_tx_init(void)
{
	//enable clock access
	RCC->AHB1ENR |= GPIOAEN;
	//Finding GPIO Pins for USART2

	GPIOA->MODER &= ~(1U<<4);
	GPIOA->MODER |=  (1U<<5);
	//Set alternate function type to AF7 (UART2_TX)
	GPIOA->AFR[0] |=  (1U<<8);
	GPIOA->AFR[0] |=  (1U<<9);
	GPIOA->AFR[0] |=  (1U<<10);
	GPIOA->AFR[0] &= ~(1U<<11);
	//Enable clock access to UART
	RCC->APB1ENR |= UART2EN;
	//Configure baudrate
	//Configure the transfer direction
	//Enable UART module

}


